

<div class="page-header">
  <h1><%= @club.name %> Members</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Leader?</th>
    </tr>
  </thead>
  <tbody>
    <% @club.participations.each do |participation| %>
    <tr>
      <td><%= link_to participation.student.name, participation.student %></td>
      <td><%= participation.leader %></td>
    </tr>
    <% end %>
  </tbody>
</table>
